<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0.35dp"
    android:layout_marginTop="0.35dp"
    android:background="@drawable/normal_item_state"
    android:padding="4dp">

    <TextView
        android:id="@+id/textStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="16dp"
        android:gravity="right"
        android:text="Active"
        android:textColor="@color/color_selector"
        android:textColorLink="@color/colorPrimary"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textNamePromo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="14dp"
        android:text="Promotion Name"
        android:textColor="@color/color_primary_text"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textDateStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textNamePromo"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="4dp"
        android:text="เริ่มใช้ : 11/01/2019"
        android:textColor="@color/color_second_text"
        android:textSize="24sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textTimeStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textDateStart"
        android:layout_marginLeft="18dp"
        android:text="เริ่มใช้ : 11/01/2019"
        android:textColor="@color/color_second_text"
        android:textSize="24sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textDateEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textNamePromo"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/textDateStart"
        android:text="สิ้นสุด : 11/02/2019"
        android:textColor="@color/color_second_text"
        android:textSize="24sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textTimeEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textDateEnd"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/textTimeStart"
        android:text="สิ้นสุด : 11/02/2019"
        android:textColor="@color/color_second_text"
        android:textSize="24sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textCreateBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textTimeStart"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="4dp"
        android:text="สร้างโดย : ป้าง จร้า"
        android:textColor="@color/color_second_text"
        android:textSize="24sp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/img_manage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textStatus"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/ic_settings_applications_black_24dp" />

</RelativeLayout>
