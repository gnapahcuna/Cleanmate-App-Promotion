<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_overlay">

        <TextView
            android:id="@+id/textTitleListPromo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="26dp"
            android:text="โปรโมชั่น Standard"
            android:textColor="@color/color_primary_text"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_condition"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_add_promo"
            android:drawableRight="@drawable/ic_settings_black_24dp2"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="กำหนดเอง"
            android:textColor="@color/color_desc_text"
            android:textSize="24sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:background="@color/black_overlay">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_list_create_promo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp" />
    </RelativeLayout>
</LinearLayout>
