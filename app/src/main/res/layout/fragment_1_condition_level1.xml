<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_overlay"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="10dp"
        android:gravity="right"
        android:text="(2/4)"
        android:textColor="@color/color_primary_text"
        android:textSize="16sp"
        android:textStyle="italic" />

    <ScrollView
        android:id="@+id/score_condi_level1"
        android:layout_width="match_parent"
        android:layout_height="500dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black_overlay">

                <TextView
                    android:id="@+id/textTitleListPromo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="10dp"
                    android:text="กำหนดเงื่อนไข"
                    android:textColor="@color/color_primary_text"
                    android:textSize="18sp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textTitleListPromo"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="8dp"
                    android:paddingTop="4dp"
                    android:theme="@style/MyRadio">

                    <RadioButton
                        android:id="@+id/rdbCondi1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="จำนวน"
                        android:textColor="@color/color_second_text"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/rdbCondi2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ราคา"
                        android:textColor="@color/color_second_text"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/rdbCondi3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ไม่มี"
                        android:textColor="@color/color_second_text"
                        android:textSize="16sp" />
                </RadioGroup>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/group_condi1_level1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black_overlay">

                <TextView
                    android:id="@+id/textTitleListPromo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="10dp"
                    android:text="กำหนดจำนวน"
                    android:textColor="@color/color_primary_text"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edt_condi_num"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/textTitleListPromo1"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edit_text_selector"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="จำนวนที่เงื่อนไข"
                    android:inputType="number"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/group_condi2_level1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:background="@color/black_overlay">

                <TextView
                    android:id="@+id/textTitleListPromo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="10dp"
                    android:text="กำหนดราคา"
                    android:textColor="@color/color_primary_text"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edt_condi_price"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/textTitleListPromo2"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edit_text_selector"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="ราคาที่เข้าเงื่อนไข"
                    android:inputType="numberDecimal"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black_overlay">

                <TextView
                    android:id="@+id/textTitleListPromo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="10dp"
                    android:text="กำหนดรูปแบบส่วนลด"
                    android:textColor="@color/color_primary_text"
                    android:textSize="18sp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textTitleListPromo"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="8dp"
                    android:paddingTop="4dp"
                    android:theme="@style/MyRadio">

                    <RadioButton
                        android:id="@+id/rdbDiscount1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ส่วนลดรวม"
                        android:textColor="@color/color_second_text"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/rdbDiscount2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ส่วนลดรายชิ้น"
                        android:textColor="@color/color_second_text"
                        android:textSize="16sp" />

                </RadioGroup>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/group_condi3_level1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:background="@color/black_overlay">

                <TextView
                    android:id="@+id/textTitleListPromo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="10dp"
                    android:text="กำหนดส่วนลดราชิ้น ชิ้นที่"
                    android:textColor="@color/color_primary_text"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edt_condi_no"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/textTitleListPromo2"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edit_text_selector"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="ราคาที่เข้าเงื่อนไข"
                    android:inputType="number"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black_overlay">

                <TextView
                    android:id="@+id/textTitleListPromo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="10dp"
                    android:text="กำหนดประเภทส่วนลด"
                    android:textColor="@color/color_primary_text"
                    android:textSize="18sp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textTitleListPromo"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="8dp"
                    android:paddingTop="4dp"
                    android:theme="@style/MyRadio">

                    <RadioButton
                        android:id="@+id/rdbDiscountPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ราคา"
                        android:textColor="@color/color_second_text"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/rdbDiscountRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="เปอร์เซ็น"
                        android:textColor="@color/color_second_text"
                        android:textSize="16sp" />

                </RadioGroup>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/group_discount1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black_overlay">

                <TextView
                    android:id="@+id/textTitleListPromo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="10dp"
                    android:text="กำหนดราคา"
                    android:textColor="@color/color_primary_text"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edt_discount_price"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/textTitleListPromo1"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edit_text_selector"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="จำนวนราคา"
                    android:inputType="number"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/group_discount2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:background="@color/black_overlay">

                <TextView
                    android:id="@+id/textTitleListPromo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="10dp"
                    android:text="กำหนดเปอร์เซ็น"
                    android:textColor="@color/color_primary_text"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edt_discount_rate"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/textTitleListPromo2"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edit_text_selector"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="จำนวนเปอร์เซ็น"
                    android:inputType="numberDecimal"
                    android:textSize="16sp" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="30dp">

        <Button
            android:id="@+id/btn_back_level0"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_add_promo"
            android:gravity="center"
            android:text="ย้อนกลับ"
            android:textColor="@color/black_overlay" />

        <Button
            android:id="@+id/btn_next_condition_level1"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_next"
            android:drawableRight="@drawable/ic_navigate_next_black_24dp"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="ถัดไป"
            android:textColor="@color/black_overlay" />
    </LinearLayout>
</LinearLayout>
